package esprit.microservice1.services;

import esprit.microservice1.entities.Candidat;
import esprit.microservice1.repositories.CandidatRepo;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class CandidatService {
    @Autowired
    private CandidatRepo candidatRepo;

    public List<Candidat> findAll() {
        return candidatRepo.findAll();
    }

    public Candidat addCandidat(Candidat candidat) {
        return candidatRepo.save(candidat);
    }

    public void deleteCandidat(Long id) {
        candidatRepo.deleteById(id);
    }

    public Candidat updateCandidat(Long id, Candidat updatedCandidat) {
        Optional<Candidat> existingCandidat = candidatRepo.findById(id);
        if (existingCandidat.isPresent()) {
            Candidat candidat = existingCandidat.get();
            candidat.setNom(updatedCandidat.getNom()); // Assuming there's a "nom" attribute
            candidat.setPrenom(updatedCandidat.getPrenom()); // Assuming there's a "prenom" attribute
            return candidatRepo.save(candidat);
        } else {
            throw new RuntimeException("Candidat not found with id " + id);
        }
    }
}
